{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/nextcloud",
            "depends" : [
                "php-apache",
                "php-apcu",
                "php-gd",
                "php-imagick",
                "php-systemd",
                "smbclient",
                "smtp-server"
            ],
            "apache2modules" : [
                "env",
                "headers",
                "php7",
                "rewrite",
                "setenvif"
            ],
            "phpmodules" : [
                "apcu",
                "bcmath",
                "ftp",
                "gd",
                "gmp",
                "iconv",
                "imagick",
                "mysqli",
                "pdo_mysql",
                "smbclient",
                "systemd"
            ],

            "wellknown" : {
                "robots.txt" : {
                    "disallow" : [
                        "/"
                    ]
                },
                "carddav" : {
                    "location" : "${appconfig.context}/remote.php/dav/"
                },
                "caldav" : {
                    "location" : "${appconfig.context}/remote.php/dav/"
                },
                "webfinger" : {
                    "proxy" : "${site.protocol}://${site.hostnameorlocalhost}${appconfig.context}/public.php?service=webfinger"
                },
                "host-meta" : {
                    "location" : "${appconfig.context}/public.php?service=host-meta"
                },
                "host-meta.json" : {
                    "location" : "${appconfig.context}/public.php?service=host-meta-json"
                }
            },

            "appconfigitems" : [
                {
                    "type" : "directorytree",
                    "names" : [
                        ".user.ini",
                        "3rdparty",
                        "apps",
                        "core",
                        "lib",
                        "ocm-provider",
                        "ocs",
                        "ocs-provider",
                        "resources",
                        "themes",
                        "AUTHORS",
                        "console.php",
                        "COPYING",
                        "cron.php",
                        "index.html",
                        "index.php",
                        "occ",
                        "public.php",
                        "remote.php",
                        "robots.txt",
                        "status.php",
                        "version.php"
                    ],
                    "source" : "nextcloud/$1",
                    "uname" : "root",
                    "gname" : "root",
                    "filepermissions" : "preserve",
                    "dirpermissions"  : "preserve"
                },
                {
                    "type"   : "file",
                    "name"   : ".htaccess",
                    "source" : "nextcloud/.htaccess",
                    "uname"  : "${apache2.uname}",
                    "gname"  : "${apache2.gname}",
                    "permissions" : "0644"
                },
                {
                    "type"  : "directory",
                    "name"  : "data",
                    "dirpermissions"  : "0750",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"  : "directory",
                    "name"  : "${appconfig.datadir}"
                },
                {
                    "type"  : "directory",
                    "name"  : "${appconfig.datadir}/data",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "datadir",
                    "dirpermissions"  : "0750",
                    "filepermissions" : "0640",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"  : "directory",
                    "name"  : "config",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "configdir",
                    "dirpermissions"  : "0750",
                    "filepermissions" : "0640",
                    "uname"       : "${apache2.uname}",
                    "gname"       : "${apache2.gname}"
                },
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/fix-permissions.pl"
                },
                {
                    "type"         : "file",
                    "name"         : "/etc/systemd/system/nextcloud@${appconfig.appconfigid}.service",
                    "template"     : "tmpl/nextcloud@.service.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "systemd-timer",
                    "name"         : "nextcloud@${appconfig.appconfigid}"
                },
                {
                    "type" : "systemd-service",
                    "name" : "smtp-server@${appconfig.appconfigid}"
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/install.pl"
                }
            ],
            "upgraders" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/fix-restore.pl"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/upgrade.pl"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/change-admin-pass.pl"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "database",
                    "name"       : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "all privileges",
                    "charset"    : "utf8mb4"
                }
            ]
        }
    },
    "customizationpoints" : {
        "upload_max_filesize_mb" : {
            "type"        : "integer",
            "required"    : false,
            "default" : {
                "expression" : "512"
            }
        },
        "memory_limit_mb" : {
            "type"        : "integer",
            "required"    : false,
            "default" : {
                "expression" : "512"
            }
        }
    }
}
