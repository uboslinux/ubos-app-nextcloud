developer=https://nextcloud.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=22.5.802
pkgrel=1
pkgdesc="Collabora Online - Built-in CODE Server"
_app=nextcloud
_acc=richdocumentscode
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/CollaboraOnline/${_acc}/releases/download/${pkgver}/${_acc}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}")
depends=(
    'nextcloud'
    'fuse2' )
options=('!strip')
sha512sums=('dc961bb1e3bdd8faa7b2a4f392a070c692aa454590130f98f6e78c7d53dda87dbca28de9dfee00193e2bebd6c4506c27ff44111718978230c77a2f81319fcb97')

package() {
# Manifest
    mkdir -p -m 0755 ${pkgdir}/ubos/lib/ubos/manifests
    sed -e "s!@ACCESSORYID@!$_acc!g" ${startdir}/../shared/ubos-manifest-accessory.tmpl.json > ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json
    chmod 0644 ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m0644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Code
    mkdir -p ${pkgdir}/ubos/share/${_app}/apps

    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/ubos/share/${_app}/apps/
}
