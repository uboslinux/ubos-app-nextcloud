developer=https://nextcloud.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=24.0.1
pkgrel=1
pkgdesc="Extension to the Nextcloud full text search app to communicate with ElasticSearch"
_app=nextcloud
_acc=fulltextsearch_elasticsearch
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/nextcloud-releases/${_acc}/releases/download/v${pkgver}/${_acc}-v${pkgver}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}")
depends=(
    'nextcloud'
    'elasticsearch'
    'elasticsearch-ingest-attachment'
    'jre11-openjdk-headless' )
options=('!strip')
install=install
sha512sums=('2147269286953273a5e005e3e53bcbe844831b3bf4d0a71b602aba24d7e6844d3116cb0162d683fa92f1555a873eb62ee9d63b719d5607c0b7478475a10fe627')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Template files
    install -D -m0644 ${startdir}/tmpl/* -t ${pkgdir}/ubos/share/${pkgname}/tmpl/

# Systemd
    install -D -m0644 ${startdir}/systemd/*.service -t ${pkgdir}/usr/lib/systemd/system/

# Logs
    install -d m0755 ${pkgdir}/ubos/log

# Code
    mkdir -p ${pkgdir}/ubos/share/${_app}/apps
    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/ubos/share/${_app}/apps/
    install -D -m0755 ${startdir}/bin/*.pl -t ${pkgdir}/ubos/share/${pkgname}/bin/

# Data
    mkdir -p ${pkgdir}/ubos/lib/${pkgname}
}
