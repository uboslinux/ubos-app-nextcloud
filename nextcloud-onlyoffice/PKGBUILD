developer=https://onlyoffice.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=7.2.1
pkgrel=1
pkgdesc="The Nextcloud OnlyOffice integration app"
_app=nextcloud
_acc=onlyoffice
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/ONLYOFFICE/onlyoffice-nextcloud/releases/download/v${pkgver}/${_acc}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}")
depends=(
    'nextcloud')
options=('!strip')
sha512sums=('9b16f22c2bf4c8ba4604fc4d457e44825d506c70e0205b594ea976b74e0c8f158f3990aded867acc2f8ea3f38fe8e9a59477d34de0aa5c81e292fe2e8daed489')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m0644 ${startdir}/appicons/{72x72,144x144}.png -t ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Code
    mkdir -p ${pkgdir}/ubos/share/${_app}/apps

    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/ubos/share/${_app}/apps/
}
