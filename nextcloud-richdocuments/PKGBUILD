developer=https://nextcloud.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=7.1.3
pkgrel=1
pkgdesc="Collabora Online"
_app=nextcloud
_acc=richdocuments
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/nextcloud-releases/${_acc}/releases/download/v${pkgver}/${_acc}-v${pkgver}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}")
depends=(
    'nextcloud')
options=('!strip')
sha512sums=('53c693ff7a79ef6a4cc0b69e150c58157e550f8cbdd86124dd3d2fe51018b1d475ca7b969218f7813a76ff2512dd1fde224b3d4086ff978f98d78650d9147947')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m0644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Code
    mkdir -p ${pkgdir}/ubos/share/${_app}/apps

    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/ubos/share/${_app}/apps/
}
