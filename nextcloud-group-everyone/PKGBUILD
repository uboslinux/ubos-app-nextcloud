developer=https://nextcloud.com/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
pkgver=0.1.8
pkgrel=2
pkgdesc="The Nextcloud everyone group app"
_app=nextcloud
_acc=group_everyone
arch=('any')
license=("AGPL3")
source=("${_acc}-${pkgver}.tar.gz::https://github.com/icewind1991/${_acc}/releases/download/v${pkgver}/${_acc}.tar.gz")
releasepage=("https://apps.nextcloud.com/apps/${_acc}")
depends=(
    'nextcloud')
options=('!strip')
sha512sums=('d12053a48e209ba718b0948be8c2ea6c2952eed359fa51202c91fe1fc9cafe7359183ece8891dc14820cc21495c0705c6c128fa631eee060878a4972581a4bdd')

package() {
# Manifest
    mkdir -p -m 0755 ${pkgdir}/ubos/lib/ubos/manifests
    sed -e "s!@ACCESSORYID@!$_acc!g" ${startdir}/../shared/ubos-manifest-accessory.tmpl.json > ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json
    chmod 0644 ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
#    install -D -m644 ${startdir}/appicons/{72x72,144x144}.png ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Code
    mkdir -p ${pkgdir}/ubos/share/${_app}/apps
    cp -dr --no-preserve=ownership ${srcdir}/${_acc} ${pkgdir}/ubos/share/${_app}/apps/
}
